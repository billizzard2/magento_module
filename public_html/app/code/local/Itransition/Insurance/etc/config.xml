<?xml version="1.0"?>

<config>
    <modules>
        <Itransition_Insurance>
            <version>0.1.0</version>
        </Itransition_Insurance>
    </modules>

    <global>

        <fieldsets>
            <sales_convert_quote_address>
                <it_insurence><to_order>*</to_order></it_insurence>
            </sales_convert_quote_address>
        </fieldsets>

        <sales>
            <quote>
                <totals>
                    <insurance>
                        <class>insurance/sales_quote_address_total_block</class>
                    </insurance>
                </totals>
            </quote>
        </sales>






        <blocks>
            <insurance>
                <class>Itransition_Insurance_Block</class>
            </insurance>
        </blocks>

        <models>
           <!-- <insurance>
                <class>Itransition_Insurance_Model</class>
                <resourceModel>insurance_resource</resourceModel>
            </insurance>-->

            <insurance>
                <class>Itransition_Insurance_Model</class>
            </insurance>

            <insurance_resource>
                <class>Itransition_Insurance_Model_Resource</class>
                <!--<entities>-->
                    <!--<block>-->
                        <!--<table>ign_siteblock</table>-->
                    <!--</block>-->
                <!--</entities>-->
            </insurance_resource>
        </models>

        <events>
            <adminhtml_init_system_config>
                <observers>
                    <init_system_config>
                        <class>insurance/observer</class>
                        <method>changeSystemConfig</method>
                    </init_system_config>
                </observers>
            </adminhtml_init_system_config>
        </events>

        <resources>
            <insurance_setup>
                <setup>
                    <module>Itransition_Insurance</module>
                </setup>
            </insurance_setup>
        </resources>

        <helpers>
            <insurance>
                <class>Itransition_Insurance_Helper</class>
            </insurance>
        </helpers>
    </global>

    <frontend>
        <layout>
            <updates>
                <insurance module="insurance">
                    <file>insurance.xml</file>
                </insurance>
            </updates>
        </layout>

        <events>
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <insurance>
                        <class>insurance/observer</class>
                        <method>checkout_controller_onepage_save_shipping_method</method>
                        <type>model</type>
                    </insurance>
                </observers>
            </checkout_controller_onepage_save_shipping_method>
        </events>

        <routers>
            <siteblocks>
                <use>standard</use>
                <args>
                    <module>Itransition_Insurance</module>
                    <frontName>insurance</frontName>
                </args>
            </siteblocks>
        </routers>
        <translate>
            <modules>
                <IGN_Siteblocks>
                    <files>
                        <default>Itransition_Insurance.csv</default>
                    </files>
                </IGN_Siteblocks>
            </modules>
        </translate>
    </frontend>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <siteblocks before="Mage_Adminhtml">Itransition_Insurance_Adminhtml</siteblocks>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <default>
        <design>
            <header>
                <welcome>Defaultwerwerwre welcome msg!</welcome>
            </header>
        </design>
        <insurance>
            <settings>
                <enableField>0</enableField>
            </settings>
        </insurance>
        <carriers>
            <flatrate>
                <insuranceEnable>0</insuranceEnable>
            </flatrate>
        </carriers>
        <carriers>
            <freeshipping>
                <insuranceEnable>0</insuranceEnable>
            </freeshipping>
        </carriers>
    </default>

</config>